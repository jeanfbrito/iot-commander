<div class="page-header">
  <h1>Listing readings</h1>
</div>
<%= line_chart [name: "Temperatura", data: @readings.map { |reading| 
                                [reading['timestamp'], 
                                reading['data']['temperature']]
                              }]%>

<%= line_chart [name: "luminosity", data: @readings.map { |reading| 
                                [reading['timestamp'], 
                                reading['data']['luminosity']]
                              }]%>                              

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Data</th>
            <th>Timestamp</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @readings) do |reading| %>
            <td><%= reading.data %></td>
            <td><%= reading.timestamp %></td>
        <td><%= link_to 'Destroy', device_reading_path(@device, reading), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
